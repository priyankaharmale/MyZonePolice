<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Zone4Live" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_primary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="toolbarStyle">@style/CustomToolBarStyle</item>
        <item name="colorControlNormal">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomToolBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/black</item>
        <item name="color">@android:color/black</item>
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="Theme.Zone4Live.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="toolbarStyle">@style/CustomToolBarStyle</item>
    </style>

    <style name="Theme.Zone4Live.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Zone4Live.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="toolbarStyle">@style/CustomToolBarStyle</item>
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="dialog_animation_writer">
        <item name="android:windowEnterAnimation">@anim/anim_slide_in_right
        </item> <!--dialog slide from right -->
        <item name="android:windowExitAnimation">@anim/anim_slide_out_left
        </item><!--dialog close with right move-->
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialog_animation">
        <item name="android:windowEnterAnimation">@anim/anim_slide_in_left
        </item> <!--dialog slide from left -->
        <item name="android:windowExitAnimation">@anim/anim_slide_out_left
        </item><!--dialog close with right move-->
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>
</resources>